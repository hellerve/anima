(load "anima.carp")
(use Anima)

(def s 600)
(def n-lines 50)

(defn lines-from [r x y]
  (for [i 0 n-lines]
    (let-do [whitish (random-between 80 255)]
      (color r whitish whitish whitish 255)
      (line r x y (Anima.rand s) (Anima.rand s)))))

(defn draw [rend]
  (do
    (background rend 0 0 0 255)
    (lines-from rend 0 0)
    (lines-from rend 0 s)
    (lines-from rend s 0)
    (lines-from rend s s)))

(defsketch "example" s s
  draw)
